<%- include ("../partials/header") %>

<h1 style="text-align: center; padding: 2rem; color: white;">Edit <%=campground.name%></h1>
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-6">
      <form action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
        <div class="form-label-group">
            <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
          <label for="postTitle">Post Title</label>
        </div>
        

        <div class="form-label-group">
            <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>">
          <label for="imageURL">Image URL</label>
        </div>
        <div class="form-label-group">
            <textarea rows="4" cols="100" class="form-control" type="text" name="campground[description]"><%=campground.description%></textarea>
        </div>
        
        <div class="form-label-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>

      <hr style="background-color: rgb(139, 133, 133); width: 70%;">
      <p class="mt-4 mb-3 text-muted text-center">&copy; techbook 2020</p>
    </div>
  </div>



<%- include ("../partials/footer") %>
