<%- include ("../partials/header") %>


    <h1 style="text-align: center; padding: 2rem;">Edit Comment</h1>
    <div class="row">
        
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground_id%>/comments/<%= comment._id%>?_method=PUT" method="POST" >
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]"> <%=comment.text%></textarea>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
        

        
    </div>
    



